<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>

<hr>

<%= form_with(model: [@playlist, @song], local:true) do |form| %>
<%= form.label :Artist %>
<%= form.text_area :artist %> <br>
<%= form.label :Name %>
<%= form.text_area :name %> <br>
<%= form.submit 'Agregar' %>
<% end  %>

<ul>
	<% @songs.each do |song| %>
		<li>
			<%= song.artist %>
			<%= song.name %>
			<%= link_to 'Eliminar', playlist_song_path(@playlist.id, song.id), method: :delete %>
		</li>
	<% end %>
</ul>
