<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path, class: 'btn btn-dark' %>
<hr>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Playlists</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.playlists.count %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
